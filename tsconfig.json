{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*", "./projects/nexus-ai/components/*"],
      "@/lib/*": ["./lib/*"],
      "@/types/*": ["./types/*", "./projects/nexus-ai/types/*"],
      "./projects/nexus-ai/lib/prisma": ["./projects/nexus-ai/lib/prisma.ts"],
      "./projects/nexus-ai/lib/utils": ["./projects/nexus-ai/lib/utils.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
