// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// Agent model - represents AI agents being monitored
model Agent {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   // e.g., "openai", "anthropic", "custom"
  status      String   @default("inactive") // active, inactive, error
  config      String?  // JSON string for agent configuration
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  metrics     AgentMetric[]
  tasks       Task[]
}

// AgentMetric model - stores performance metrics
model AgentMetric {
  id             String   @id @default(cuid())
  agentId        String
  metricType     String   // e.g., "latency", "tokens", "errors", "uptime"
  value          Float
  unit           String?  // e.g., "ms", "count", "percentage"
  metadata       String?  // JSON string for additional data
  recordedAt     DateTime @default(now())

  // Relation
  agent          Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId, recordedAt])
}

// Task model - tracks monitoring tasks
model Task {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   // e.g., "health_check", "performance_test", "alert"
  status      String   @default("pending") // pending, running, completed, failed
  priority    String   @default("normal") // low, normal, high, critical
  schedule    String?  // Cron expression for scheduled tasks
  lastRunAt   DateTime?
  nextRunAt   DateTime?
  result      String?  // JSON string for task result
  error       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation
  agentId     String?
  agent       Agent?   @relation(fields: [agentId], references: [id], onDelete: SetNull)

  @@index([status, nextRunAt])
}
